<h2>ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, placeholder:"メールアドレスを入力", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, placeholder:"パスワードを入力", autocomplete: "current-password" %>
  </div>
  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>


